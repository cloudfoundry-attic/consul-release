<%=
  def discover_external_ip
    networks = spec.networks.marshal_dump

    _, network = networks.find do |_name, network_spec|
      network_spec.default
    end

    if !network
      _, network = networks.first
    end

    if !network
      raise "Could not determine IP via network spec: #{networks}"
    end

    network.ip
  end

  def confab
    p('confab')
  end

  def consul
    config = p('consul')
    if config['agent']['node_name_includes_id']
      config['agent']['node_name'] = "#{spec.name}-#{spec.id}"
    end
    config
  end

  {
    node: {
      name: name,
      index: spec.index,
      external_ip: discover_external_ip,
      zone: spec.az,
    },
    consul: consul,
    path: {
      consul_config_dir: "/var/vcap/data/consul_agent/configuration",
      pid_file: "/var/vcap/data/consul_agent/tmp/consul_agent.pid",
    },
  }.to_json
%>
